<Window x:Class="dayouAWSWh2.View.winAlcUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dayouAWSWh2.View"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="winAlcUpdate" Height="150" Width="300" AllowsTransparency="True" WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.25*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#6741D9" Margin="0,0,0,0" BorderBrush="Black" BorderThickness="1,0,1,0"  CornerRadius="20,20,0,0">
            <Label Content="수정" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="15" />
        </Border>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*"/>
                    
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Label Content="수정할 ALC" Style="{StaticResource TopLabelStyle}" Foreground="Gray" />
                    <Border Grid.Row="1" Grid.Column="1" Margin="0,5,30,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="180" Height="40">
                        <TextBox x:Name="txt1" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                    </Border>
                </StackPanel>

              
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="white" BorderBrush="Black" BorderThickness="1,0,1,1" CornerRadius="0,0,20,20" >
            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave" Style="{StaticResource LoginButton}" Margin="10,4,5,4" Click="btnSave_Click">
                    <StackPanel Orientation="Horizontal" Margin="15 0">
                        <Icon:PackIconMaterial Kind="CheckboxMarkedCircle"  VerticalAlignment="Center"/>
                        <TextBlock Text="  저장" FontWeight="Bold" />
                    </StackPanel>
                </Button>
                <Button x:Name="btnCancel" Style="{StaticResource CancelButton}" Margin="5,4,10,4" Click="btnCancel_Click">
                    <StackPanel Orientation="Horizontal" Margin="15 0">
                        <Icon:PackIconMaterial Kind="Cancel"  VerticalAlignment="Center"/>
                        <TextBlock Text="  취소" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
