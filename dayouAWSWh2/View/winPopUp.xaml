<Window x:Class="dayouAWSWh2.View.winPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dayouAWSWh2.View"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="winPopUp" Height="433" Width="552" AllowsTransparency="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.85*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#6741D9" Margin="0,0,0,0" BorderBrush="Black" BorderThickness="1,0,1,0"  CornerRadius="20,20,0,0">
            <Label Content="팝업 창" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="15" />
        </Border>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                    <Label Content="정보1" Style="{StaticResource TopLabelStyle}" Foreground="Gray" />
                    <Border Grid.Row="1" Grid.Column="1" Margin="0,5,30,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150" Height="40">
                        <TextBox x:Name="txt1" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                    </Border>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <Label Content="정보1" Style="{StaticResource TopLabelStyle}" Foreground="Gray" />
                    <Border Grid.Row="1" Grid.Column="1" Margin="0,5,30,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150" Height="40">
                        <TextBox x:Name="txt2" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <Border Grid.Row="2" Background="white" BorderBrush="Black" BorderThickness="1,0,1,1" CornerRadius="0,0,20,20" >
            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnLogin" Style="{StaticResource LoginButton}" Margin="10,10,5,10">
                    <StackPanel Orientation="Horizontal" Margin="15 0">
                        <Icon:PackIconMaterial Kind="CheckboxMarkedCircle"  VerticalAlignment="Center"/>
                        <TextBlock Text="  저장" FontWeight="Bold" />
                    </StackPanel>
                </Button>
                <Button x:Name="btnCancel" Style="{StaticResource CancelButton}" Margin="5,10,10,10">
                    <StackPanel Orientation="Horizontal" Margin="15 0">
                        <Icon:PackIconMaterial Kind="Cancel"  VerticalAlignment="Center"/>
                        <TextBlock Text="  취소" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
