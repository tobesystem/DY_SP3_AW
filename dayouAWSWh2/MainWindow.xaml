<Window x:Class="dayouAWSWh2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dayouAWSWh2" 
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Width="1920" Height="1080" WindowStartupLocation="CenterScreen" WindowStyle="None"  ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid Background="#FF868E96">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- 사이드 메뉴의 너비 -->
            <ColumnDefinition Width="*"/>
            <!-- 메인 콘텐츠 영역 -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="2">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1B78CC"/>
                    <GradientStop Color="#FF1868B2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>
                <Image Source="Images/대유에이텍 로고-Photoroom.png" Stretch="Uniform" Width="130" Height="25" Margin="10 0 0 0" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="자동창고 관리 프로그램" Foreground="#FFA5D8FF" VerticalAlignment="Center" FontSize="14" Margin="20 0 0 0" FontFamily="NanumGothic" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtVer" Text="ver 0.0.0.0" Foreground="#FFA5D8FF" VerticalAlignment="Center" FontSize="14" Margin="10 0 0 0" FontFamily="NanumGothic" FontWeight="SemiBold"/>
                </StackPanel>
                <Border  Grid.Column="2" Background="Transparent" Margin="0" CornerRadius="12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnAllClose" Style="{StaticResource CancelButton}" Background="#FFE3EAFF" Width="95" Margin="10,10,5,10" Click="btnAllClose_Click" Foreground="{x:Null}" BorderBrush="#FF091261" >
                            <StackPanel Orientation="Horizontal" Margin="10 0">
                                <Icon:PackIconMaterial Kind="CloseBoxMultiple" Foreground="#FF1A70BF" VerticalAlignment="Center"/>
                                <TextBlock Text=" 일괄닫기" Foreground="#FF1A70BF" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 1 0 0"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnMinus" Width="50" Style="{StaticResource btnMinus}" Click="btnMinus_Click"/>
                        <Button x:Name="btnClose" Width="50" Style="{StaticResource btnClose}" Click="btnClose_Click"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Border>

        <Grid Grid.Row="1" Background="#FF748FFC">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Style="{StaticResource FavsScrollViewer}">

                <StackPanel Grid.Row="0" Orientation="Vertical">
                    <ToggleButton x:Name="FileBtn" Click="FileButton_Click" Style="{StaticResource MenuBtn}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="95"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="File" VerticalAlignment="Center" Grid.Column="0" Margin="10 0 0 0"/>
                            <TextBlock Text="파일" VerticalAlignment="Center" Grid.Column="1" />
                            <Image x:Name="FileArrowIcon" Source="/Images/아래화살표흰.png" Grid.Column="2" Width="15"/>
                        </Grid>
                    </ToggleButton>

                    <StackPanel x:Name="FileSubMenu" Visibility="Collapsed" Orientation="Vertical" Background="#FF748FFC">
                        <Button Content="시스템 설정" Click="Setting_Click" Style="{StaticResource SideBtn}"/>
                        <Button Content="로그아웃" Click="LogOut_Click" Style="{StaticResource SideBtn}"/>
                    </StackPanel>

                    <Separator Background="#FF91A7FF" Height="1"/>

                    <ToggleButton x:Name="CodeBtn" Style="{StaticResource MenuBtn}" Click="CodeBtn_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="95"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="ImageAutoAdjust" VerticalAlignment="Center" Grid.Column="0" Margin="10 0 0 0"/>
                            <TextBlock Text="코드관리" VerticalAlignment="Center" Grid.Column="1"/>
                            <Image x:Name="CodeArrowIcon" Source="/Images/아래화살표흰.png" Grid.Column="2" Width="15" />
                        </Grid>

                    </ToggleButton>
                    <StackPanel x:Name="CodeSubMenu" Visibility="Collapsed" Orientation="Vertical" Background="#FF748FFC">
                        <Button Content="PALLET 코드 정보" Click="PalletBtn" Style="{StaticResource SideBtn}"/>
                        <Button Content="사용자 관리" Click="UserInfoBtn" Style="{StaticResource SideBtn}"/>
                        <Button Content="에러코드 관리" Click="ErrorBtn" Style="{StaticResource SideBtn}"/>
                    </StackPanel>
                    <Separator Background="#FF91A7FF" Height="1"/>

                    <ToggleButton x:Name="ProgressBtn" Style="{StaticResource MenuBtn}" Click="ProgressBtn_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="95"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="ProgressCheck" VerticalAlignment="Center" Grid.Column="0" Margin="10 0 0 0"/>
                            <TextBlock Text="입출고 관리" VerticalAlignment="Center" Grid.Column="1"/>
                            <Image x:Name="ProgressArrowIcon" Source="/Images/아래화살표흰.png" Grid.Column="2" Width="15" />
                        </Grid>

                    </ToggleButton>

                    <StackPanel x:Name="ProgressSubMenu" Visibility="Collapsed" Orientation="Vertical" Background="#FF748FFC">
                        <Button Content="입출고 진행현황" Click="InOutBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="입고 진행현황" Click="InBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="출고 진행현황" Click="OutBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="지정 출고 작업" Click="ManageBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <!--<Button Content="수동 서열 출고" Click="ManualOrderBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>-->
                        <Button Content="의장 출고 내역" Click="HostOutBtn"  Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="의장 정보 현황" Click="HostBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <!--<Button Content="도장 정보 현황" Click="ProdBtn"  Style="{StaticResource SideBtn}" Cursor="Hand"/>-->
                        <Button Content="서열출고 대기명령" Click="OrderWaitBtn"  Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="PDA 출고점검" Click="PDAOutBtn"  Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="PDA 출고점검이력" Click="PDAOutHitsBtn"  Style="{StaticResource SideBtn}" Cursor="Hand"/>
                    </StackPanel>
                    <Separator Background="#FF91A7FF" Height="1"/>

                    <ToggleButton x:Name="StockManageBtn" Style="{StaticResource MenuBtn}" Click="StockManageBtn_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="95"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="Seat" VerticalAlignment="Center" Grid.Column="0" Margin="10 0 0 0"/>
                            <TextBlock Text="재고 관리" VerticalAlignment="Center" Grid.Column="1"/>
                            <Image x:Name="StockManageArrowIcon" Source="/Images/아래화살표흰.png" Grid.Column="2" Width="15" />
                        </Grid>

                    </ToggleButton>

                    <StackPanel x:Name="StockManageSubMenu" Visibility="Collapsed" Orientation="Vertical" Background="#FF748FFC">
                        <Button Content="셀별 모니터링" Click="CellMonitor" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="적재코드별 재고 현황" Click="CodeStockBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="적재위치별 재고 현황" Click="LocStockBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>

                    </StackPanel>
                    <Separator Background="#FF91A7FF" Height="1"/>

                    <ToggleButton x:Name="RecordManageBtn" Style="{StaticResource MenuBtn}" Click="RecordManageBtn_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="95"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="RecordCircle" VerticalAlignment="Center" Grid.Column="0" Margin="10 0 0 0"/>
                            <TextBlock Text="실적 관리" VerticalAlignment="Center" Grid.Column="1"/>
                            <Image x:Name="RecordManageArrowIcon" Source="/Images/아래화살표흰.png" Grid.Column="2" Width="15" />
                        </Grid>

                    </ToggleButton>

                    <StackPanel x:Name="RecordManageSubMenu" Visibility="Collapsed" Orientation="Vertical" Background="#FF748FFC">
                        <Button Content="입고실적 조회" Click="InResult" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="출고실적 조회" Click="OutResult" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="품목별 실적조회" Click="LoadItemPerfBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="적재별 실적조회" Click="LoadPerfBtn"  Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="입고대 실적조회" Click="TotalJob"  Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="의장 실적조회" Click="HostResultBtn"  Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <!--<Button Content="도장 실적조회" Click="ProdResultBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>-->
                        <Button Content="시간별 작업실적" Click="TimeStockBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="기간별 작업실적" Click="DateStockBtn" Style="{StaticResource SideBtn}" Cursor="Hand"/>

                    </StackPanel>
                    <Separator Background="#FF91A7FF" Height="1"/>

                    <ToggleButton x:Name="MonitoringBtn" Style="{StaticResource MenuBtn}" Click="MonitoringBtn_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="95"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="MonitorAccount" VerticalAlignment="Center" Grid.Column="0" Margin="10 0 0 0"/>
                            <TextBlock Text="모니터링" VerticalAlignment="Center" Grid.Column="1"/>
                            <Image x:Name="MonitoringArrowIcon" Source="/Images/아래화살표흰.png" Grid.Column="2" Width="15" />
                        </Grid>

                    </ToggleButton>

                    <StackPanel x:Name="MonitoringSubMenu" Visibility="Collapsed" Orientation="Vertical" Background="#FF748FFC">
                        <Button Content="설비 모니터링" Click="TrackingMonitorSP3" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                        <Button Content="설비에러 조회" Click="ErrorHistory" Style="{StaticResource SideBtn}" Cursor="Hand"/>
                    </StackPanel>

                    <Separator Background="#FF91A7FF" Height="1"/>

                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Row="1" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Icon:PackIconMaterial Grid.Column="0" Kind="AccountOutline" Height="14" Width="14" Foreground="White" VerticalAlignment="Center" Margin="0 0 0 2"/>
                    <TextBlock x:Name="txtUser" Foreground="White"  FontSize="14" TextAlignment="Center" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Grid>


        <!-- 탭 컨트롤 -->
        <TabControl x:Name="MainTabControl" Grid.Row="1" Grid.Column="1" ItemContainerStyle="{StaticResource UniformTabItemStyle}" FontWeight="Bold" BorderThickness="0" Margin="0 -2 0 0" />
    </Grid>
</Window>
