<UserControl x:Class="dayouAWSWh2.UC.ucPallet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown" >
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="파레트코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtPallet" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0" Width="150" SelectionChanged="cbCarCode_SelectionChanged" />
            </StackPanel>



            <DataGrid x:Name="PalletDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" MouseDoubleClick="PalletDataGrid_MouseDoubleClick" >
                <DataGrid.Columns>

                    <DataGridTextColumn Header="No" IsReadOnly="True" CanUserResize="False" Width="40" Binding="{Binding ROW_NUM}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="파레트코드" IsReadOnly="True" Width="120" Binding="{Binding PALLETCD}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="구분" IsReadOnly="True" Width="100" Binding="{Binding PALLETNM}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="상태" IsReadOnly="True" Width="180" Binding="{Binding BADCODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="등록일시" IsReadOnly="True" Width="150" Binding="{Binding CREATE_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
   
</UserControl>
