<UserControl x:Class="dayouAWSWh2.UC.ucErrorHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
            mc:Ignorable="d" 
            d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">

                <Label Content="발생일시" Style="{StaticResource TopLabelStyle}" Width="80"/>
                <DatePicker x:Name="DatePicker1" Width="100" BorderBrush="LightGray" Margin="0,5,2,5" Padding="2 7 2 0" VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" FontSize="12" CalendarStyle="{StaticResource CustomCalendarStyle }"/>

                <Border Grid.Row="1" Margin="0,5,1,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="105">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="timeTextBox" Text="" PreviewMouseDown="TimeTextBox_PreviewMouseDown" Style="{StaticResource textBoxStyle}" Width="75" BorderBrush="Transparent" VerticalAlignment="Center" FontSize="12" Margin="5"/>
                        
                        <StackPanel Grid.Row="1" Grid.Column="0" Background="White" Width="15" Height="40" VerticalAlignment="Stretch">
                            <Button x:Name="upBtn" Click="IncreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/위.png" Width="12" Height="16" />
                            </Button>
                            <Button x:Name="downBtn" Click="DecreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/아래.png" Width="12" Height="16" />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

               
                <Label Content="~" Style="{StaticResource TopLabelStyle}" Width="30" FontWeight="Bold" FontSize="20"/>
                <DatePicker x:Name="DatePicker2" Width="100" BorderBrush="LightGray" Margin="0,5,2,5" Padding="2 7 2 0"  VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" FontSize="12"  CalendarStyle="{StaticResource CustomCalendarStyle }"/>

                <Border Grid.Row="1" Margin="0,5,1,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="105">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="timeTextBox2" Text="" PreviewMouseDown="TimeTextBox_PreviewMouseDown" Style="{StaticResource textBoxStyle}" Width="75" BorderBrush="Transparent" VerticalAlignment="Center" FontSize="12" Margin="5" IsReadOnly="True"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Background="White" Width="15" Height="40" VerticalAlignment="Center">
                            <Button Click="IncreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/위.png" Width="12" Height="16" />
                            </Button>
                            <Button Click="DecreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/아래.png" Width="12" Height="16" />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                

                <Label Content="설비타입" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbMachType" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" SelectedIndex="0" Width="120"/>

                <Label Content="설비번호" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbMachNo" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" SelectedIndex="0" Width="120"/>

                <Label Content="에러코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="120">
                    <TextBox x:Name="txtErroCode" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>
            </StackPanel>

            <TabControl Grid.Row="2" ItemContainerStyle="{StaticResource UniformTabItemStyle}" BorderThickness="0">
                <TabItem Header="에러 이력 조회" Width="150" Height="35" FontSize="13" HorizontalContentAlignment="Center" Margin="0,0,2,0" Cursor="Hand">
                    <DataGrid Width="1800" x:Name="errorDataGrid" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="0,5,0,5" Cursor="Arrow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="타입" IsReadOnly="True" Width="120" Binding="{Binding ID_MACH}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="번호" IsReadOnly="True" Width="120" Binding="{Binding ID_MACHNO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="코드" IsReadOnly="True" Width="120" Binding="{Binding ERR_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="내용" IsReadOnly="True" Width="400" Binding="{Binding ERR_DESC}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="참조" IsReadOnly="True" Width="200" Binding="{Binding ID_MEMO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="발생일시" IsReadOnly="True" Width="250" Binding="{Binding ERR_START}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="에러 이력 집계" Width="150" FontSize="13" HorizontalContentAlignment="Center" Margin="0,0,2,0" Cursor="Hand">
                    <DataGrid Width="1800" x:Name="errorSumDataGrid" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="0,5,0,5" Cursor="Arrow">
                        <DataGrid.Columns>

                            <DataGridTextColumn Header="타입" IsReadOnly="True" Width="120" Binding="{Binding ID_MACH}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="번호" IsReadOnly="True" Width="120" Binding="{Binding ID_MACHNO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="코드" IsReadOnly="True" Width="120" Binding="{Binding ERR_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="내용" IsReadOnly="True" Width="400" Binding="{Binding ERR_DESC}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                            <DataGridTextColumn Header="집계" IsReadOnly="True" Width="100" Binding="{Binding ERR_CNT}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
    
</UserControl>
