<UserControl x:Class="dayouAWSWh2.UC.ucPDAOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
            mc:Ignorable="d" 
            d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown" >
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <DataGrid x:Name="PDAOutDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="0,5,0,0" >
                <DataGrid.Columns>

                    <DataGridTextColumn Header="출고일자" IsReadOnly="True" Width="200" Binding="{Binding OUT_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="차번" IsReadOnly="True" Width="100" Binding="{Binding ID_INDEX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="순번" IsReadOnly="True" Width="100" Binding="{Binding ID_SUBIDX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="COMMIT" IsReadOnly="True" Width="150" Binding="{Binding COMMIT_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="ALC 코드" IsReadOnly="True" Width="150" Binding="{Binding ALC_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="제품바코드" IsReadOnly="True" Width="250" Binding="{Binding LOT_NO1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="파렛트바코드" IsReadOnly="True" Width="130" Binding="{Binding PLT_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="투입일시" IsReadOnly="True" Width="200" Binding="{Binding REPORT_SYS_DT}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="바디 넘버" IsReadOnly="True" Width="100" Binding="{Binding BODY_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="열구분" IsReadOnly="True" Width="80" Binding="{Binding FR_GUBUN}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="PDA 확인" IsReadOnly="True" Width="80" Binding="{Binding PDA_CHECK}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
