<UserControl x:Class="dayouAWSWh2.UC.ucManualOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
            mc:Ignorable="d" 
            d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Grid.Column="1" Margin="10,5,30,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtCode" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>
                <Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0" Width="150"/>

                <Button x:Name="btnOut" Style="{StaticResource LoginButton}" Width="95" Margin="50,10,5,10" Click="btnOut_Click" >
                    <StackPanel Orientation="Horizontal" Margin="10 0">
                        <Icon:PackIconMaterial Kind="LocationExit"  VerticalAlignment="Center"/>
                        <TextBlock Text=" 출고진행" FontWeight="Bold" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <DataGrid x:Name="dataGrid1" Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="0,0,0,10" >
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="지시 추가" Click="outAdd_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="코드" IsReadOnly="True" CanUserResize="False" Width="100" Binding="{Binding ALC_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="차종" IsReadOnly="True" Width="100" Binding="{Binding ALC_CLASS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="TYPE" IsReadOnly="True" Width="120" Binding="{Binding ALC_TYPE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="FR 수량" IsReadOnly="True" Width="50" Binding="{Binding FR_CNT}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="R2 수량" IsReadOnly="True" Width="50" Binding="{Binding R2_CNT}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="R3 수량" IsReadOnly="True" Width="50" Binding="{Binding R3_CNT}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid x:Name="dataGrid2" Grid.Row="2" Grid.Column="1" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="5,0,0,10"  >
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="출고 삭제" Click="outDel_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="IDX" IsReadOnly="True" CanUserResize="False" Width="40" Binding="{Binding ID_SUBIDX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="열" IsReadOnly="True" CanUserResize="False" Width="40" Binding="{Binding ID_BANK}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="연" IsReadOnly="True" Width="40" Binding="{Binding ID_BAY}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="단" IsReadOnly="True" Width="40" Binding="{Binding ID_LEVEL}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT NO1" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT NO2" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO2}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT NO3" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO3}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
