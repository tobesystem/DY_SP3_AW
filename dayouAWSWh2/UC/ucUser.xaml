<UserControl x:Class="dayouAWSWh2.UC.ucUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="사용자명" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtUserName" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="사용유무" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbUseYN" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" SelectedIndex="0" Width="150"/>
            </StackPanel>

            <DataGrid x:Name="UserDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}"  MouseDoubleClick="UserDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="사용자 코드" IsReadOnly="True" Width="200" Binding="{Binding USER_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="사용자명" IsReadOnly="True" Width="200" Binding="{Binding USER_NAME}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="전화번호" IsReadOnly="True" Width="180" Binding="{Binding TEL_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="이메일" IsReadOnly="True" Width="180" Binding="{Binding EMAIL}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="권한" IsReadOnly="True" Width="150" Binding="{Binding AUTH_NAME}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="부서" IsReadOnly="True" Width="150" Binding="{Binding DEPT_NAME}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="사용유무" IsReadOnly="True" Width="100" Binding="{Binding USE_YN}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="최근로그인" IsReadOnly="True" Width="200" Binding="{Binding LOGIN_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="등록일시" IsReadOnly="True" Width="200" Binding="{Binding CREATE_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
