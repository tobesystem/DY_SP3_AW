<UserControl x:Class="dayouAWSWh2.UC.ucTimeStock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="조회일자" Style="{StaticResource TopLabelStyle}"/>
                <DatePicker x:Name="DatePicker" Width="150" BorderBrush="LightGray" Margin="5" Padding="0,5,0,0" VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" CalendarStyle="{StaticResource CustomCalendarStyle }"
        />

                <!--<Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0" Width="120"/>-->
            </StackPanel>



            <DataGrid x:Name="TimeStockDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="작업유형" IsReadOnly="True" Width="200" Binding="{Binding Round_Type}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="작업시간" IsReadOnly="True" Width="200" Binding="{Binding Round_Time}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="입고수량" IsReadOnly="True" Width="100" Binding="{Binding IN_Count}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="출고수량" IsReadOnly="True" Width="100" Binding="{Binding OT_Count}" ElementStyle="{StaticResource DataGridCellCenter}"/>


                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
    
    
</UserControl>
