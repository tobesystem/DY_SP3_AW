<UserControl x:Class="dayouAWSWh2.UC.ucWmsOutResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown" >
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="조회일자" Style="{StaticResource TopLabelStyle}"/>
                <DatePicker x:Name="DatePicker" Width="150" BorderBrush="LightGray" Margin="5"  Padding="0,5,0,0"  VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" CalendarStyle="{StaticResource CustomCalendarStyle }" />
                <Label Content="~" VerticalAlignment="Center"/>
                <DatePicker x:Name="DatePicker2" Width="150" BorderBrush="LightGray" Margin="5"  Padding="0,5,0,0"  VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" CalendarStyle="{StaticResource CustomCalendarStyle }" />

                <Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0" Width="150"/>

                <Label Content="F/R구분" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbFR" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0" Width="150"/>

                <Label Content="ALC 코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtAlcCode" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>
            </StackPanel>

            <DataGrid x:Name="wmsOutResultDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" >
                <DataGrid.Columns>

                    <DataGridTextColumn Header="NO" IsReadOnly="True" CanUserResize="False" Width="40" Binding="{Binding ROW_NUM}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="차종" IsReadOnly="True" CanUserResize="False" Width="60" Binding="{Binding ALC_CLASS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="열" IsReadOnly="True" Width="50" Binding="{Binding ID_BANK}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="연" IsReadOnly="True" Width="50" Binding="{Binding ID_BAY}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="단" IsReadOnly="True" Width="50" Binding="{Binding ID_LEVEL}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO1" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO2" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO2}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO3" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO3}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="파레트코드" IsReadOnly="True" Width="150" Binding="{Binding PLT_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="완료일시" IsReadOnly="True" CanUserResize="False" Width="220" Binding="{Binding WORKDATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="호차" IsReadOnly="True" Width="50" Binding="{Binding ID_INDEX}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Border>
    
</UserControl>
