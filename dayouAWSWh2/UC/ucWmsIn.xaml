<UserControl x:Class="dayouAWSWh2.UC.ucWmsIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>
            <CheckBox Margin="0,0,20,0" HorizontalAlignment="Right" VerticalAlignment="Center" Content="자동 조회" IsChecked="True" x:Name="ckSearch" Foreground="White" 
            Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked">
                <CheckBox.Resources>
                    <Style TargetType="Path">
                        <Setter Property="Fill" Value="Red"/>
                    </Style>
                </CheckBox.Resources>
            </CheckBox>

            <DataGrid x:Name="wmsInDataGrid" Grid.Row="1" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="0,5,0,0">
                <DataGrid.ContextMenu>
                    <ContextMenu x:Name="wmsInContextMenu">
                        <MenuItem x:Name="menuForceComplete" Header="입고 강제완료" Click="inComplete_Click"/>
                        <MenuItem x:Name="menuCancel" Header="입고 취소" Click="inCancel_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="작업번호" IsReadOnly="True" Width="110" Binding="{Binding IDX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="작업구분" IsReadOnly="True" Width="100" Binding="{Binding ID_TYPE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="ALC 코드" IsReadOnly="True" Width="100" Binding="{Binding LOAD_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="S/C 호기" IsReadOnly="True" Width="100" Binding="{Binding HOGI}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="셀 위치" IsReadOnly="True" Width="100" Binding="{Binding CELL}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="COMMIT" IsReadOnly="True" Width="100" Binding="{Binding COMMIT_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="FR구분" IsReadOnly="True" Width="50" Binding="{Binding FR_GUBUN_DESC}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="파레트 코드" IsReadOnly="True" Width="100" Binding="{Binding PLT_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="상태" IsReadOnly="True" Width="100" Binding="{Binding STATUS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="CV 위치" IsReadOnly="True" Width="100" Binding="{Binding LOCATION}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT NO1" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO2" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO2}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO3" IsReadOnly="True" Width="200" Binding="{Binding LOT_NO3}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="입고진행일자" IsReadOnly="True" Width="180" Binding="{Binding ORDATE}" ElementStyle="{StaticResource DataGridCellCenter}" />

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
    
</UserControl>
