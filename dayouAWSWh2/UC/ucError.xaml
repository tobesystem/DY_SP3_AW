<UserControl x:Class="dayouAWSWh2.UC.ucError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
            xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
            mc:Ignorable="d" 
            d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown" >

    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">

                <Label Content="설비타입" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbMachType" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" SelectedIndex="0" Width="150"/>

                <Label Content="에러코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtErroCode" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="에러명" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtErroName" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>
            </StackPanel>

            <DataGrid x:Name="ErrorDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}"  MouseDoubleClick="ErrorDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="No" IsReadOnly="True" Width="50" Binding="{Binding ROW_NUM}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="설비타입" IsReadOnly="True" Width="150" Binding="{Binding ID_MACH}" ElementStyle="{StaticResource DataGridCellCenter}" />
                    <DataGridTextColumn Header="에러코드" IsReadOnly="True" Width="120" Binding="{Binding ERR_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="에러내용" IsReadOnly="True" Width="250" Binding="{Binding ERR_NAME}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="비고" IsReadOnly="True" Width="350" Binding="{Binding ERR_ETC}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>

    
</UserControl>
