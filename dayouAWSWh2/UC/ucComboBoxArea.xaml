<UserControl x:Class="dayouAWSWh2.UC.ucComboBoxArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignWidth="1400" d:DesignHeight="50">
    <Grid>
        <Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2">
                <Label Content="코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Grid.Column="1" Margin="10,5,30,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtId" Text="텍스트 영역" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>
                <Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" Width="150"/>
                <Label Content="조회일자" Style="{StaticResource TopLabelStyle}"/>
                <DatePicker Width="150" BorderBrush="LightGray" Margin="5" VerticalContentAlignment="Center"/>
                <Label Content="출하구분" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="150" />
                <Label Content="Cover'G사양" Style="{StaticResource TopLabelStyle}"  />
                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="200"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
