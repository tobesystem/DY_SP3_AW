<UserControl x:Class="dayouAWSWh2.UC.ucOrderWait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
            d:DesignHeight="995" d:DesignWidth="1720">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">

                <Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0"  Width="150"/>

            </StackPanel>

            <DataGrid x:Name="OrderWaitDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}"  Margin="0,5,0,0">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="작업번호" IsReadOnly="True" Width="80" Binding="{Binding IDX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="작업구분" IsReadOnly="True" CanUserResize="False" Width="90" Binding="{Binding ID_TYPE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="ALC 코드" IsReadOnly="True" Width="80" Binding="{Binding LOAD_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="입고 일시" IsReadOnly="True" Width="160" Binding="{Binding IN_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="S/C 호기" IsReadOnly="True" Width="90" Binding="{Binding HOGI}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="셀 위치" IsReadOnly="True" Width="80" Binding="{Binding CELL}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="COMMIT" IsReadOnly="True" Width="80" Binding="{Binding COMMIT_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="FR구분" IsReadOnly="True" Width="50" Binding="{Binding FR_GUBUN_DESC}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="파레트 코드" IsReadOnly="True" Width="80" Binding="{Binding PLT_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="상태" IsReadOnly="True" Width="80" Binding="{Binding STATUS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="CV 위치" IsReadOnly="True" Width="90" Binding="{Binding LOCATION}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT NO1" IsReadOnly="True" Width="190" Binding="{Binding LOT_NO1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO2" IsReadOnly="True" Width="190" Binding="{Binding LOT_NO2}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO3" IsReadOnly="True" Width="190" Binding="{Binding LOT_NO3}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="출고진행일자" IsReadOnly="True" Width="160" Binding="{Binding ORDATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="RFID" IsReadOnly="True" Width="60" Binding="{Binding RFID_STATUS}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
