<UserControl x:Class="dayouAWSWh2.UC.ucProd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
            mc:Ignorable="d" 
            d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">

                <Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0"  Width="150"/>

                <Label Content="ALC 코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtAlcCode" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="BODY NO" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtBodyNo" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="COMMIT NO" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtCommitNo" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="상태" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbStatus" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" SelectedIndex="0"  Width="150"/>

            </StackPanel>

            <DataGrid x:Name="prodDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" >
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="서열 삭제" Click="prodDel_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>

                    <DataGridTextColumn Header="NO" IsReadOnly="True" Width="90" Binding="{Binding ROW_NUM}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="의장투입일시" IsReadOnly="True" Width="150" Binding="{Binding REPORT_DT}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="COMMIT_NO" IsReadOnly="True" Width="100" Binding="{Binding CMT_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="도장ALC" IsReadOnly="True" Width="100" Binding="{Binding ALC_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="BODY NO" IsReadOnly="True" Width="130" Binding="{Binding BODY_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="지역" IsReadOnly="True" Width="130" Binding="{Binding HANGUEL_PART}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="사양국" IsReadOnly="True" Width="130" Binding="{Binding REGION_NAME}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="내장색" IsReadOnly="True" Width="130" Binding="{Binding INNER_COLOR}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="차종" IsReadOnly="True" Width="100" Binding="{Binding ALC_CLASS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="FR" IsReadOnly="True" Width="80" Binding="{Binding STOCK_FR}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="R2" IsReadOnly="True" Width="80" Binding="{Binding STOCK_R2}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="R3" IsReadOnly="True" Width="80" Binding="{Binding STOCK_R3}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="작업상태" IsReadOnly="True" Width="70" Binding="{Binding STATUS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="MES전송" IsReadOnly="True" Width="70" Binding="{Binding POP_SEND}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="수신일자" IsReadOnly="True" Width="210" Binding="{Binding CR_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
    
</UserControl>
