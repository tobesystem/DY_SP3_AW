<UserControl x:Class="dayouAWSWh2.UC.ucLocStock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="셀 위치" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="40">
                    <TextBox x:Name="txtBank" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" MaxLength="2"/>
                </Border>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="40">
                    <TextBox x:Name="txtBay" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" MaxLength="2"/>
                </Border>
                <Border Grid.Row="1" Margin="5,5,30,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="40">
                        <TextBox x:Name="txtLevel" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" MaxLength="2"/>
                </Border>

                <Label Content="Cell 상태" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCellStatus" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0" Width="150"/>

                <Label Content="ALC 코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtCode" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="차종" Style="{StaticResource TopLabelStyle}"/>
                <ComboBox x:Name="cbCarCode" Style="{StaticResource ComboBoxStyle}" Margin="0,5,0,5" DisplayMemberPath="CODE_NAME" SelectedIndex="0" Width="150" />

                <Label Content="파레트 코드" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtPallet" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

            </StackPanel>



            <DataGrid x:Name="locStockDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}"  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="열" IsReadOnly="True" CanUserResize="False" Width="40" Binding="{Binding ID_BANK}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                    <DataGridTextColumn Header="연" IsReadOnly="True" Width="40" Binding="{Binding ID_BAY}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="단" IsReadOnly="True" Width="40" Binding="{Binding ID_LEVEL}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="상태" IsReadOnly="True" Width="80" Binding="{Binding STATUS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="입고일시" IsReadOnly="True" Width="150" Binding="{Binding IN_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="ALC 코드" IsReadOnly="True" Width="100" Binding="{Binding ALC_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="F/R" IsReadOnly="True" Width="50" Binding="{Binding FR_GUBUN}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO1" IsReadOnly="True" Width="190" Binding="{Binding LOT_NO1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO2" IsReadOnly="True" Width="190" Binding="{Binding LOT_NO2}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="LOT_NO3" IsReadOnly="True" Width="190" Binding="{Binding LOT_NO3}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="PLT_NO" IsReadOnly="True" Width="80" Binding="{Binding PLT_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="품목코드1" IsReadOnly="True" Width="150" Binding="{Binding ITEM_CODE1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="품목코드2" IsReadOnly="True" Width="150" Binding="{Binding ITEM_CODE2}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="품목코드3" IsReadOnly="True" Width="150" Binding="{Binding ITEM_CODE3}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="셀 위치" IsReadOnly="True" Width="80" Binding="{Binding CELL}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
    
</UserControl>
