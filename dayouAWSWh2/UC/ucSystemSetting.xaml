<UserControl x:Class="dayouAWSWh2.UC.ucSystemSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720">
    <Border Padding="8" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <Border Grid.Row="1" Background="White" Padding="100,30,100,120">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="0.25*"/>
                        <RowDefinition Height="0.2*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Row="0" Grid.RowSpan="1" Header=" 제어 설정 " Margin="10" FontSize="13" FontWeight="Bold" Padding="15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="서열출고" Style="{StaticResource LabelStyle2}" />
                                </Border>
                                <CheckBox x:Name="cbHostOut" Content="자동 실행"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="입고 바코드" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox x:Name="cbInBcr" Content="바코드 체크 후 진행"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="출고 바코드" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox x:Name="cbOutBcr" Content="바코드 체크 후 진행"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="스태커크레인 3호기" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox x:Name="cbInSet1" Content="입고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                                <CheckBox x:Name="cbInOrder1" Content="입고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox x:Name="cbOutSet1" Content="출고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox x:Name="cbOutOrder1" Content="출고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="스태커크레인 4호기" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox x:Name="cbInSet2" Content="입고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                                <CheckBox x:Name="cbInOrder2" Content="입고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox x:Name="cbOutSet2" Content="출고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox x:Name="cbOutOrder2" Content="출고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,10,5" Visibility="Collapsed">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="스테커크레인 3호기" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox Content="입고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                                <CheckBox Content="입고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox Content="출고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox Content="출고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,10,5" Visibility="Collapsed">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="스테커크레인 4호기" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox Content="입고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                                <CheckBox Content="입고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox Content="출고(할당)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                                <CheckBox Content="출고(지시)"  Style="{StaticResource checkBoxStyle}"  Margin="10,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="LOT 중복 확인" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox x:Name="cbLotCheck" Content="LOT 중복 체크 후 진행"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                        </StackPanel>

                    </GroupBox>

                    <GroupBox Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Header=" 소켓 통신설정 " Margin="10" FontSize="13">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,10,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="통신명" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="IP Address" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="Port[1]" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="Port[2]" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="Log" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="CVC" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <TextBox x:Name="txtIP1" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt1Port1" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt2Port1" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <CheckBox x:Name="cbLog1" Content="로그저장"  Style="{StaticResource checkBoxStyle}"  Margin="10,10,10,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="SCC" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <TextBox x:Name="txtIP2" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt1Port2" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt2Port2" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <CheckBox x:Name="cbLog2" Content="로그저장"  Style="{StaticResource checkBoxStyle}"  Margin="10,10,10,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="입고 바코드" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <TextBox x:Name="txtIP3" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt1Port3" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt2Port3" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="출고 바코드" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <TextBox x:Name="txtIP4" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt1Port4" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt2Port4" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="서열" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <TextBox x:Name="txtIP5" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center"  />
                                <TextBox x:Name="txt1Port5" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center"  />
                                <TextBox x:Name="txt2Port5" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center"  />
                                <CheckBox x:Name="cbLog3" Content="로그저장"  Style="{StaticResource checkBoxStyle}"  Margin="10,10,10,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,0,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="MES" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <TextBox x:Name="txtIP6" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt1Port6" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <TextBox x:Name="txt2Port6" Width="120" Margin="10,10,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
                                <CheckBox x:Name="cbLog4" Content="로그저장"  Style="{StaticResource checkBoxStyle}"  Margin="10,10,10,0" FontSize="13"/>
                            </StackPanel>

                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="0" Grid.RowSpan="1" Grid.Column="2" Header=" MES 제어 " Margin="10" FontSize="13" Visibility="Collapsed">
                        <StackPanel >
                            <StackPanel Orientation="Horizontal" Margin="10,20,5,0">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="의장정보" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox Content="전송"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,15,5,0">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="도장정보" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox Content="전송"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,15,5,0">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="출하정보" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox Content="전송"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,15,5,0">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="생산지시" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox Content="전송"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,15,5,0">
                                <Border Style="{StaticResource BorderStyle1}" >
                                    <Label Content="재고정보" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <CheckBox Content="전송"  Style="{StaticResource checkBoxStyle}"  Margin="25,0,0,0" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Header=" 시리얼 통신설정 " Margin="10" FontSize="13" Visibility="Collapsed">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,10,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="통신명" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="Comport" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="BaudRate" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="DateBit" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="StopBit" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="Parity" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <Border Style="{StaticResource BorderStyle1}" Margin="10,10,10,0">
                                    <Label Content="FlowComtrol" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="서열 바코드(232)" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="120" Margin="10,10,10,0" />
                                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="120" Margin="10,10,10,0" />
                                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="120" Margin="10,10,10,0" />
                                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="120" Margin="10,10,10,0" />
                                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="120" Margin="10,10,10,0" />
                                <ComboBox Style="{StaticResource ComboBoxStyle}" Width="120" Margin="10,10,10,0" />

                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header=" 프로그램 제어 " Margin="10" FontSize="13">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                                <Border Style="{StaticResource BorderStyle1}" Margin="20,10,10,0">
                                    <Label Content="프로그램" Style="{StaticResource LabelStyle2}"/>
                                </Border>
                                <ComboBox x:Name="comboProgram" Style="{StaticResource ComboBoxStyle}" DisplayMemberPath="Current_Desc" SelectedValuePath="Current_Index" SelectedIndex="0" Width="800" Margin="10,10,10,0" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5,10,5,30" HorizontalAlignment="Right">
                                <Button x:Name="btnPlay" Style="{StaticResource playButtonStyle}" Margin="10,5,5,5" Height="35" Click="btnPlay_Click" >
                                    <StackPanel Orientation="Horizontal" Margin="15 0">
                                        <Icon:PackIconMaterial Kind="PlayBox"  VerticalAlignment="Center"/>
                                        <TextBlock Text="  시작" FontWeight="Bold" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnStop" Style="{StaticResource pauseButtonStyle}" Margin="10,5,5,5" Height="35" Click="btnStop_Click">
                                    <StackPanel Orientation="Horizontal" Margin="15 0">
                                        <Icon:PackIconMaterial Kind="StopCircle"  VerticalAlignment="Center"/>
                                        <TextBlock Text="  중지" FontWeight="Bold" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnCheck" Style="{StaticResource checkButtonStyle}" Margin="10,5,5,5" Height="35" Cursor="Hand" Click="btnCheck_Click">
                                    <StackPanel Orientation="Horizontal" Margin="15 0">
                                        <Icon:PackIconMaterial Kind="CheckCircle"  VerticalAlignment="Center"/>
                                        <TextBlock Text="  상태확인" FontWeight="Bold" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                    </GroupBox>

                    <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Header=" 프로그램 상태 " Margin="10" FontSize="13">
                        <StackPanel Margin="10,5,10,5" >
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="border1" Style="{StaticResource BorderStyle1}" Background="#CED4DA" Width="180" Height="35" Margin="5">
                                    <Label x:Name="lb1" Content="CVC" Style="{StaticResource LabelStyle1}"/>
                                </Border>
                                <Border x:Name="border2" Style="{StaticResource BorderStyle1}" Background="#CED4DA" Width="180" Height="35" Margin="5">
                                    <Label x:Name="lb12" Content="SCC" Style="{StaticResource LabelStyle1}"/>
                                </Border>
                                <Border x:Name="border3" Style="{StaticResource BorderStyle1}" Background="#CED4DA" Width="180" Height="35" Margin="5">
                                    <Label x:Name="lb13" Content="입고 바코드" Style="{StaticResource LabelStyle1}"/>
                                </Border>
                                <Border x:Name="border4" Style="{StaticResource BorderStyle1}" Background="#CED4DA" Width="180" Height="35" Margin="5">
                                    <Label x:Name="lb14" Content="출고 바코드" Style="{StaticResource LabelStyle1}"/>
                                </Border>
                                <Border x:Name="border5" Style="{StaticResource BorderStyle1}" Background="#CED4DA" Width="180" Height="35" Margin="5">
                                    <Label x:Name="lb15" Content="서열" Style="{StaticResource LabelStyle1}"/>
                                </Border>
                                <Border x:Name="border6" Style="{StaticResource BorderStyle1}" Background="#CED4DA" Width="180" Height="35" Margin="5">
                                    <Label x:Name="lb16" Content="MES" Style="{StaticResource LabelStyle1}"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>

            </Border>
        </Grid>
    </Border>

</UserControl>
