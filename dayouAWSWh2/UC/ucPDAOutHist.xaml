<UserControl x:Class="dayouAWSWh2.UC.ucPDAOutHist"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC" xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="조회일자" Style="{StaticResource TopLabelStyle}"/>
                <DatePicker x:Name="DatePicker" Width="150" BorderBrush="LightGray" Margin="5"  Padding="0,5,0,0"  VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" CalendarStyle="{StaticResource CustomCalendarStyle }" />
                <Border Grid.Row="1" Margin="0,5,1,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="105">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="timeTextBox" Text="" PreviewMouseDown="TimeTextBox_PreviewMouseDown" Style="{StaticResource textBoxStyle}" Width="75" BorderBrush="Transparent" VerticalAlignment="Center" FontSize="12" Margin="5" IsReadOnly="True"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Background="White" Width="15" Height="40" VerticalAlignment="Stretch">
                            <Button x:Name="upBtn" Click="IncreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/위.png" Width="12" Height="16" />
                            </Button>
                            <Button x:Name="downBtn" Click="DecreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/아래.png" Width="12" Height="16" />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Label Content="~" VerticalAlignment="Center"/>
                <DatePicker x:Name="DatePicker2" Width="150" BorderBrush="LightGray" Margin="5"  Padding="0,5,0,0"  VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" CalendarStyle="{StaticResource CustomCalendarStyle }" />
                <Border Grid.Row="1" Margin="0,5,1,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="105">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="timeTextBox2" Text="" PreviewMouseDown="TimeTextBox_PreviewMouseDown" Style="{StaticResource textBoxStyle}" Width="75" BorderBrush="Transparent" VerticalAlignment="Center" FontSize="12" Margin="5" IsReadOnly="True"/>

                        <StackPanel Grid.Row="1" Grid.Column="0" Background="White" Width="15" Height="40" VerticalAlignment="Center">
                            <Button Click="IncreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/위.png" Width="12" Height="16" />
                            </Button>
                            <Button Click="DecreaseTimeButton_Click" Background="White" BorderBrush="{x:Null}">
                                <Image Source="/Images/아래.png" Width="12" Height="16" />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Label Content="BODY NO" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtBodyNo" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

                <Label Content="LOT NO" Style="{StaticResource TopLabelStyle}"/>
                <Border Grid.Row="1" Margin="5,5,5,5" BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Width="150">
                    <TextBox x:Name="txtLotNo" Text="" Style="{StaticResource textBoxStyle}" BorderBrush="Transparent" VerticalAlignment="Center" Margin="5" />
                </Border>

            </StackPanel>



            <DataGrid x:Name="PDAWmsOutDataGrid" Grid.Row="2" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" >
                <DataGrid.Columns>

                    <DataGridTextColumn Header="검사일자" IsReadOnly="True" CanUserResize="False" Width="200" Binding="{Binding CHECK_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="검사자" IsReadOnly="True" Width="100" Binding="{Binding CHECK_USER}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="출고일자" IsReadOnly="True" Width="200" Binding="{Binding OUT_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="차번" IsReadOnly="True" Width="50" Binding="{Binding ID_INDEX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="순번" IsReadOnly="True" Width="50" Binding="{Binding ID_SUBIDX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="COMMIT" IsReadOnly="True" Width="100" Binding="{Binding COMMIT_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="ALC 코드" IsReadOnly="True" Width="120" Binding="{Binding ALC_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="제품 바코드" IsReadOnly="True" Width="250" Binding="{Binding LOT_NO1}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="파렛트 바코드" IsReadOnly="True" Width="100" Binding="{Binding PLT_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="투입일시" IsReadOnly="True" Width="200" Binding="{Binding REPORT_SYS_DT}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="바디넘버" IsReadOnly="True" CanUserResize="False" Width="150" Binding="{Binding BODY_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="열구분" IsReadOnly="True" CanUserResize="False" Width="80" Binding="{Binding FR_GUBUN}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="PDA확인" IsReadOnly="True" CanUserResize="False" Width="100" Binding="{Binding PDA_CHECK}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Border>
</UserControl>
