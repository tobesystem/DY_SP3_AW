<UserControl x:Class="dayouAWSWh2.UC.ucHostOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dayouAWSWh2.UC"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="995" d:DesignWidth="1720" KeyDown="UserControl_KeyDown">
    <Border Padding="8">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>

            <local:ucToolbarBtn x:Name="ucToolbarBtn" Grid.Row="0" Grid.ColumnSpan="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" Margin="5">
                <Label Content="조회일자" Style="{StaticResource TopLabelStyle}"/>
                <DatePicker x:Name="DatePicker" Width="150" BorderBrush="LightGray" Margin="5" Padding="0,5,0,0" VerticalContentAlignment="Center" Focusable = "False" SelectedDateFormat="Short" CalendarStyle="{StaticResource CustomCalendarStyle }"/>

                <Button x:Name="btnPrint" Style="{StaticResource LoginButton}" Width="100" Margin="50,10,5,10" Click="btnPrint_Click" >
                    <StackPanel Orientation="Horizontal" Margin="10 0">
                        <Icon:PackIconMaterial Kind="Printer"  VerticalAlignment="Center"/>
                        <TextBlock Text=" 라벨 발행" FontWeight="Bold" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <DataGrid x:Name="dataGrid1" Grid.Row="2" Grid.Column="0" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="0,0,0,10" SelectedCellsChanged="dataGrid1_SelectedCellsChanged" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="순번" IsReadOnly="True" CanUserResize="False" Width="50" Binding="{Binding ROW_NUM}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="출하지시일시" IsReadOnly="True" Width="200" Binding="{Binding BR_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="지시번호" IsReadOnly="True" Width="200" Binding="{Binding BR_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="수량" IsReadOnly="True" Width="50" Binding="{Binding CNT}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid x:Name="dataGrid2" Grid.Row="2" Grid.Column="1" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Margin="5,0,0,10"  >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="SEQ" IsReadOnly="True" CanUserResize="False" Width="40" Binding="{Binding ID_SUBIDX}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="출고번호" IsReadOnly="True" Width="90" Binding="{Binding WMS_OUT_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="COMMIT" IsReadOnly="True" Width="70" Binding="{Binding COMMIT_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="차종" IsReadOnly="True" Width="60" Binding="{Binding ALC_CLASS}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="ALC코드" IsReadOnly="True" Width="100" Binding="{Binding ALC_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="내장컬러" IsReadOnly="True" Width="90" Binding="{Binding COVER_COLOR}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="커버링사양" IsReadOnly="True" Width="90" Binding="{Binding COVER_SET}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="지역" IsReadOnly="True" Width="100" Binding="{Binding REGION}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="출고일시" IsReadOnly="True" Width="150" Binding="{Binding OUT_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="입고일시" IsReadOnly="True" Width="150" Binding="{Binding IN_DATE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="적재위치" IsReadOnly="True" Width="100" Binding="{Binding LOCATION}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="파레트" IsReadOnly="True" Width="80" Binding="{Binding PLT_CODE}" ElementStyle="{StaticResource DataGridCellCenter}"/>
                    <DataGridTextColumn Header="BODY NO" IsReadOnly="True" Width="80" Binding="{Binding BODY_NO}" ElementStyle="{StaticResource DataGridCellCenter}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        </Border>
</UserControl>
